<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Meter Reading Form View -->
    <record id="meter_reading_form_view" model="ir.ui.view">
        <field name="name">meter.reading.form.view</field>
        <field name="model">meter.reading</field>
        <field name="arch" type="xml">
            <form string="Reading">
                    <group name="branch_detail">
                        <group>
                            <field name="name"/>
                            <field name="x_equipment_id"/>
                            <field name="task_id"/>
                            <field name="x_reading_date"/>
                            <field name="user_id"/>
                        </group>
                    </group>
            </form>
        </field>
    </record>
    <!-- Meter Reading Tree View -->
    <record id="meter_reading_tree_view" model="ir.ui.view">
        <field name="name">meter.reading.tree.view</field>
        <field name="model">meter.reading</field>
        <field name="arch" type="xml">
            <tree string="Meter Reading">
                <field name="name" />
                <field name="x_equipment_id" />
                <field name="task_id"/>
                <field name="x_reading_date"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>
